<div class="jumbotron">
  <h1>Escape the Basement</h1>
</div>

<div class="container">
  <div class="text-center">
    <h1>Escapes</h1>
  </div>
</div>

<ul>
  <% @escapes.each do |escape| %>
    <div class="escape">
      <h4><%= link_to escape.name, escape_path(escape) %></h4>
        <ul>
          <%= image_tag escape.photo.url(:medium), class: :image %>
          <li>Description: <%= escape.description %></li>
          <li>Price: $<%= sprintf('%.2f', escape.price) %></li>
          <li>City: <%= escape.city %></li>
          <% if escape.active %>
            <%= button_to "Book Escape", cart_path(escape_id: escape.id), class: "btn btn-danger" %><br>
          <% else %>
            <h5 class="retired"><strong>This Escape is now retired. You missed out!</strong></h5>
          <% end %>
        </ul>
    </div>
  <% end %>
</ul>

<%= will_paginate @escape %>
