<h1>Welcome <%= @user.username %></h1>


<h5><%= link_to "Order History", orders_path %></h5><br><br>

<h4>Profile Information</h4>

<strong>Username:</strong> <%= @user.username %><br>
<strong>Name:</strong> <%= @user.full_name %><br>
<strong>Address:</strong> <%= @user.address %><br><br>

<% if current_user = @user && @user.admin? %>
  <%= button_to "Edit Account", edit_admin_user_path(@user), method: :get, class: "btn btn-green"%>
<% end %>